$maxw = 640px
.CONTAINER 
  height: 100%
  display: flex
  flex-flow: column
  h1 
    flex: 0 100px
  .content
    flex: 1
    overflow: auto
  
.hidden
  display: none

.tag
  display: inline-block

  &:hover
    cursor: pointer

  &.person
  &.place
  &.thing
  &.group
    font-weight: bold

#Viewer
  display: flex
  flex-flow: column nowrap
  position: relative

  .box           
    &.law 
      margin: .75rem 0
    &.data
      padding: 1.5rem 0

    &.center
      .image
        img
          border-radius: 1rem
    &.gallery
      display: flex
      flex-flow: row wrap
      gap: .25rem
      .image
        flex: 0 calc(25% - .5rem)
        img
          max-width: 100%
          border-radius: .5rem
    img
      max-width: 100%
    
    &.profile 
      padding: .5rem 1rem
      border-radius: 1rem
      margin: 1rem
      background-color: rgba($colors.black, .5)
      
      &::before 
        display: block
        content: "Profile"
        font-size: 1.5rem
        color: var(--browser-item-color)
      
      .item 
        margin: .5rem 0
        .label 
          width: 5rem
          background-color: var(--browser-item-color)
          border-radius: .5rem
          color: $colors.darkest-grey
          margin-right: 1rem
  > .cover
    background-image: var(--browser-item-background)
    background-color: var(--browser-item-bgcolor)
    color: var(--browser-item-color)
    font-size: var(--browser-item-size)
    background-repeat: no-repeat
    background-position: top center
    background-size: 100% auto
    min-width: 100%
    overflow: scroll
    height: 100%
    line-height: 1.25
    width: 100%
    flex: 1
    font-size: 1rem
    padding: 1rem

    .cover
      height: auto

    .item
      display: flex
      flex-flow: row nowrap
      margin: .1rem 0 .1rem 0
      &.law 
        margin: 1rem 0
      &.cmd
        padding: .5rem 0
      &.indent1
        padding-left: 20px
      &.indent2
        padding-left: 40px
      &.indent3
        padding-left: 60px

      .value
        flex: 1

      .label
        font-size: .8rem
        background-color: rgba($colors.darkest-grey, .25)
        // color: $colors.light-grey
        border-radius: .35rem
        margin: 0 .25rem 0 0
        align-self: start
        padding: .1rem .25rem
        min-width: 5rem

        &::before
          display: inline-block
          margin-right: .2rem
          font-family: 'icons'

      &.cmd
        .label
          display: none

      &.head
      &.boss
      &.leader
