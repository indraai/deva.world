          flex: 0 0 7rem
        .describe
          .label
            display: none
          .value
            padding: 0 .5rem

  .info
  .note
  .alert
  .warning
    min-width: 50px
    flex: 1
    padding: .25rem 0 .25rem 2rem
    margin: 1rem .5rem
    border-radius: .5rem
    padding: .25rem

    .value
      padding: .5rem

  .info
    color: darken($colors.dark-grey, 50%)
    background-color: $colors.white
    .label
      &::before
        content: $icons.fingers-victory

  .note
    color: darken($colors.note, 70%)
    background-color: $colors.note
    .label
      &::before
        content: $icons.pencil3
  .warning
    color: darken($colors.yellow, 70%)
    background-color: $colors.yellow
    .label
      &::before
        content: $icons.warning

  .alert
    color: lighten($colors.red, 70%)
    background-color: $colors.red
    .label
      &::before
        content: $icons.bubble-alert

  > .hymn
    flex: 1;
    height: 100%;
    display: flex;
    flex-flow: column;
    > h2
      text-align: center
    .content
      flex: 1
      overflow: scroll
      padding: 0 1rem
      max-width: 600px
      margin: auto

    .meta
      border-top: 1px solid
      display: flex
      flex-flow: column
      flex: 0
      font-size: .75rem
      .item
        display: flex
        .label
          flex: 0 100px
          min-width: 100px


.DataContainer
  position: relative
  height: 100%
  max-width: $maxw
  min-width: 500px
  margin: auto
  // padding: 1rem
  &::before
    font-family: icons, $fonts-text
    font-size: 2rem
    width: 100%
    display: block
    margin: 0
    padding: .5rem 1rem .5rem 1rem

  .row
    padding: .5rem 1rem .5rem 0
    color: $colors.light-grey
    border-top: 1px dotted $colors.dark-grey
    display: flex

    .key
      flex: 0
      margin: 0 1rem 0 0
  .child
    display: flex
    flex-flow: column
    .values
      margin: 0 0 0 1rem
