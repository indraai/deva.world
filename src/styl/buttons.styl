.box
  &.data
    button
      font-size: .75rem
      border-radius: .25rem
  &.buttons
    button
      margin: .2rem

  &.menu
    display: flex
    flex-flow: column nowrap

  .buttons
    button
      margin: 0
      font-size: .9rem

button
  transition: var(--transition-default)
  background-color: darken($colors.dark-grey, 20%)
  color: $colors.light-grey
  font-weight: normal
  font-size: 1rem
  border: none
  outline: 0
  padding: .5rem
  border-radius: 1.5rem
  line-height: 1
  margin: 2px

  &:hover
    cursor: pointer
    color: rgba($colors.white, .75)
    background-color: rgba($colors.baby-blue, .5)

  &:active
    cursor: pointer
    box-shadow: inset 0 0 5px rgba($colors.white, .25)
    color: rgba($colors.white, .75)
    background-color: rgba($colors.green, .5)

  &[title="No"]
    background-color: rgba($colors.red, .5)

.btn
  .icn
    margin-right: .25rem
    display: inline-block

  &.data
    &::before
      font-family: 'icons'
      display: inline-block
      content: $icons.pencil-ruler2
      margin: 0 .5rem 0 .25rem

  &.speak
    background-color: transparent
    border: none
    box-shadow: none
    padding: 0
    margin: 0

  &.docs
    width: 100%
    text-align: left
    margin: 0 0 2px 0
    padding: .5rem
    box-shadow: none
    background: rgba($colors.dark-grey, .5)
    color: $colors.white
    border-radius: .25rem
    &:hover
      color: $colors.green
    &::before
      content: "document"
      font-family: "icons"

  &.sign
    background-color: $colors.orange
    color: darken($colors.orange, 50%)

  &.cmd
  &.tty
    box-shadow: none
    text-align: left
    border-radius: 0
    background-color: transparent
    color: inherit
    position: relative
    border: none
    padding: 0
    font-size: .9rem
    &:hover
      color: $colors.orange
    &::before
      content: "\e909"
      font-family: icons
      display: inline-block
      margin-right: .3rem
      font-size: .8rem

  &.menu
    display: block
    text-align: left
    margin: 3px 0 0 0
    background-color: rgba($colors.green, 0)
    color: $colors.baby-blue
    border-radius: .25rem
    padding: .25rem .5rem
    font-size: .9rem
    box-shadow: none
    transition: all .4s linear
    &:hover
      color: darken($colors.green, 50%)
      background-color: rgba($colors.green, 1)

    &[title="quit"]
    &[title="done"]
      margin-top: 5px
    &[title="quit"]
      color: $colors.red
      background-color: rgba($colors.red, 0)
      &:hover
        color: lighten($colors.red, 50%)
        background-color: rgba($colors.red, 1)
    &[title="done"]
      color: $colors.yellow
      background-color: rgba($colors.yellow, 0)
      &:hover
        color: lighten($colors.yellow, 50%)
        background-color: rgba($colors.yellow, 1)
