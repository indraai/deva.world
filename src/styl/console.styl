#Console
  > .box
    display: flex

    &.items
      flex: 1
      overflow: scroll
      height: 100%

      > .list
        flex: 1
        overflow: scroll

        > .item
          flex: 0
          display: flex
          align-items: center
          padding: .5rem
          margin: .25rem 0


          &.client
            background-color: rgba(0,0,0,.1)
            border-radius: 1.5rem

          > .person
            flex: 0 6rem
            min-width: 6rem
            display: flex
            align-items: center
            align-self: start
            margin: .25rem 0 0 .25rem
            .user
              flex: 1

            .avatar
              line-height: 1
              margin-right: .25rem

              img
                width: 27px
                height: 27px
                border-radius: 50%

          .emoji
            flex: 0
            margin-right: 3px
            font-size: .7rem

          > .label
            flex: 0

          > .text
            flex: 1
            line-height: 1.5
            margin: .5rem
            overflow: hidden
            text-overflow: elipsis

            .box
              .item
                display: flex
                .label
                  flex: 0 4rem
                .value
                  flex: 1
            .image
              position: relative
              background-color: rgba(0,0,0,0)
              display: flex
              align-items: center
              justify-content: center
              flex-flow: column

              &.artwork
                position: fixed
                top: 0
                bottom: 0
                left: 0
                right: 0
                width: 100%
                height: 100%
                background-color: rgba(0,0,0,.75)
                z-index: 1000
                img
                  max-width: 100%
                  max-height: 100%
                  box-shadow: 0 3px 9px rgba(0,0,0,.75)

              img
                border-radius: .5rem
                box-shadow: none

            .item
              display: flex
              margin: 3px 0 0 0

              &.audio
                .label
                  display: none
                .value
                  audio
                    width: 300px
                    height: 20px


            > .label
              margin-right: .5rem
              padding: .15rem .5rem
              font-size: .75rem
              align-self: start
              min-width: 7rem

    // display for main prompt input
    &.prompt
      flex: 0
      padding: .15rem
      border-radius: 1.5rem
      box-shadow: 0 3px 9px rgba(0,0,0,.1)
      background-color: lighten($colors.darkest-grey, 10%)
      border: 3px solid $colors.darkest-grey
      flex-flow: row nowrap
      display: flex
      align-items: center
      .label
        padding-right: .25rem
        margin-left: .4rem


#PromptForm 
  display: flex
  flex: 1
  flex-flow: column
  .prompt_input
    background-color: transparent
    flex: 1
    min-width: 100%
    border-radius: 0
    margin: 0
    border: none
    outline: none
    width: 100%
    font-family: $fonts-text
    font-weight: 100
    resize: none
    height: auto
    color: $colors.light-green
    padding: .15rem
    font-size: 1rem

